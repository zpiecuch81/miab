<?xml version="1.0" encoding="utf-8" standalone="no"?><manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="pl.com.ezap.miab">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">

        <activity android:label="@string/app_name" android:name="pl.com.ezap.miab.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/title_activity_create_message"
           android:name="pl.com.ezap.miab.CreateMessage"
           android:parentActivityName="pl.com.ezap.miab.MainActivity" >
           <!-- The meta-data element is needed for versions lower than 4.1 -->
           <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="pl.com.ezap.miab.MainActivity" />
        </activity>

        <activity android:label="@string/title_activity_sending_message"
           android:name="pl.com.ezap.miab.SendingMessage"
           android:parentActivityName="pl.com.ezap.miab.CreateMessage" >
           <!-- The meta-data element is needed for versions lower than 4.1 -->
           <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="pl.com.ezap.miab.CreateMessage" />
        </activity>

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>

    </application>

</manifest>