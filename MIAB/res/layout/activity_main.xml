<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bkg"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_leaveMsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:alpha="50"
        android:background="@drawable/rounded"
        android:text="@string/button_leaveMsg" />

    <Button
        android:id="@+id/button_throwMsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:alpha="50"
        android:background="@drawable/rounded"
        android:text="@string/button_throwMsg" />

    <Button
        android:id="@+id/button_digMsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:alpha="50"
        android:background="@drawable/rounded"
        android:text="@string/button_digMsg" />

    <Button
        android:id="@+id/button_searchDigMsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:alpha="50"
        android:background="@drawable/rounded"
        android:text="@string/button_searchDigMsg" />

    <Button
        android:id="@+id/button_foundMsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:alpha="50"
        android:background="@drawable/rounded"
        android:text="@string/button_foundMsg" />
</LinearLayout>